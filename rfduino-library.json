/*
  PlatformIO library configuration file for RFduino.
  Based on the stock Arduino configuration found here: http://www.rfduino.com/package_rfduino_index.json
  
  Note: I've commented the JSON for my own sanity.
        If that proves to cause issues, I'll remove the comments and that will make me sad.
        
  Status: Pre-alpha - Still in development
*/
{
  "keywords": [
      "RFduino"
  ],
  "name": "RFduino",
  "authors": [
    {
      "name": "RFduino Team",
      "email": "support@rfduino.com",
      "url": "http://www.rfduino.com"
    },
    {
      "name": "Marc Wilson",
      "url": "http://blog.marcwilson.net/contact/"
    }
  ],
  "description": "A finger-tip sized, Arduino compatible, wireless enabled microcontroller",
  /* Currently hardcoding the archive URL and version. Maybe just point to the live repo (which has version tags) instead? */
  "downloadUrl": "http://www.rfdigital.com/wp-content/uploads/2014/03/RFduino_2.3.1.zip",
  "version": "2.3.1",
  "__disabled__repository": {
    "type": "git",
    "url": "https://github.com/RFduino/RFduino.git"
  },
  "examples": [
    "libraries/RFduinoBLE/examples/",
    "libraries/RFduinoGZLL/examples/",
    "libraries/RFduinoNonBLE/examples/"
    /* It is unclear if the subdirectory "examples" format would work for a repository, rather than an downloadUrl archive
    "https://github.com/RFduino/RFduino/tree/master/libraries/RFduinoBLE/examples/",
    "https://github.com/RFduino/RFduino/tree/master/libraries/RFduinoGZLL/examples/",
    "https://github.com/RFduino/RFduino/tree/master/libraries/RFduinoNonBLE/examples/",
    */
  ],
  "frameworks": "arduino",
  "platforms": [
    "RFduino"
  ],
  "dependencies": [
    {
        "name": "arm-none-eabi-gcc"
        /* "version": "4.8.3-2014q1" */
    },
    {
        "name": "RFDLoader"
        /* "version": "1.5" */
    }
  ]
}
